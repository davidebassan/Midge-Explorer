<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <!-- Robot pose -->
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="z" default="0"/>
  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="0"/>



  <!-- Launch other relevant files-->
  <include file="$(find midge)/launch/robot_description.launch"/>

  <!-- Launch gmapping -->
  <include file="$(find mapping)/launch/gmapping.launch"/>

  <!-- Launch amcl -->
  <include file="$(find localizer)/launch/amcl.launch"/>

  <!-- World File -->
  <arg name="world_file" default="$(find midge)/worlds/empty_1.world"/>

  <!-- Launch Gazebo World -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>
  <!-- Find my robot Description-->
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find midge)/urdf/midge.xacro'"/>

  <!-- Spawn My Robot -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -param robot_description -model midge
              -x $(arg x) -y $(arg y) -z $(arg z)
              -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)"/>

    <!--launch rviz-->
  <node name="rviz" pkg="rviz" type="rviz" respawn="false"
        args="-d $(find midge)/default.rviz"/>

</launch>
